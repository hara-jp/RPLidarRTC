extern "C"
{
 
  void RPLidarRTCTestInit(RTC::Manager* manager)
  {
    coil::Properties profile(rplidarrtc_spec);
    manager->registerFactory(profile,
                             RTC::Create<RPLidarRTCTest>,
                             RTC::Delete<RPLidarRTCTest>);
  }
  
};


